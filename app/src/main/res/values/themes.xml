<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Outrange" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorSecondary">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="cookieBackgroundColor">@color/primaryColor</item>
    </style>

    <style name="navigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/primaryColor</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="pop" parent="Widget.AppCompat.Light.ListPopupWindow"></style>

    <style name="Theme.toolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primaryColor</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="activity_bg">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="textView_100">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/text_color_100</item>
    </style>

    <style name="textView_60">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/text_color_60</item>
    </style>

    <style name="textView_40">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/text_color_40</item>
    </style>

    <style name="lightBg">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="item_bg_click_corners">
        <item name="android:background">@drawable/ripple_gray_corners</item>
    </style>

    <style name="item_bg_click">
        <item name="android:background">@drawable/ripple_gray</item>
    </style>

    <style name="SmoothProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">2</item>
        <item name="spb_interpolator">spb_interpolator_linear</item>
        <item name="spb_colors">@array/pocket_background_colors</item>
        <item name="spb_mirror_mode">true</item>
    </style>

    <style name="roundedCornerStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>