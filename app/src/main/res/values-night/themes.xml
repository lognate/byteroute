<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OutrangeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="cookieBackgroundColor">@color/primaryColor</item>
    </style>

    <style name="navigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="Theme.toolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primaryColor</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="activity_bg">
        <item name="android:background">@color/primaryColor</item>
    </style>


    <style name="item_bg_click_corners">
        <item name="android:background">@drawable/ripple_white_corners</item>
    </style>

    <style name="item_bg_click">
        <item name="android:background">@drawable/ripple_white</item>
    </style>

    <style name="lightBg">
        <item name="android:background">@color/primaryColor</item>
    </style>
</resources>